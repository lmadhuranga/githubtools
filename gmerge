currentBranch=$(git branch --show-current)

echo " ! Merge to main <= $currentBranch  yes 1 "
read -p " ! Merge  $currentBranch  =>  main ( no 0 ) : " type

# default value set
env=${type:-0}
 
# production or test
if [ "$type" == 1 ]
then 
  git push origin $currentBranch

  git checkout main

  git pull origin main 

  git merge $currentBranch

  git push origin main
else
  git commit 

  git merge main
fi
